{
  "name": "copilot-git-prompt-tracker",
  "displayName": "AI Git Prompt Tracker",
  "description": "Track and save AI assistant prompts (Copilot, Claude Code, Cursor) to GitHub repository for commit history association",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onAuthenticationRequest:github"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotPromptTracker.configure",
        "title": "Configure GitHub Repository",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.savePrompt",
        "title": "Save Current Prompt",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.savePromptFromTemplate",
        "title": "Save Prompt from Template",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.viewHistory",
        "title": "View Prompt History",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.viewProjectPrompts",
        "title": "View Project Prompts",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.toggle",
        "title": "Toggle Prompt Tracking",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.initializeProject",
        "title": "Initialize Project Configuration",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.testConfiguration",
        "title": "Test Project Configuration",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.testAuth",
        "title": "Test GitHub Authentication",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.captureLastCopilotChat",
        "title": "Capture Last Copilot Chat",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.showSession",
        "title": "Show Current Session",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.recordInteraction",
        "title": "Record Interaction",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.correlateWithCommit",
        "title": "Correlate with Commit",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.signOut",
        "title": "Sign Out from GitHub",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.openView",
        "title": "Open Prompts View",
        "category": "AI Prompt Tracker",
        "icon": "$(list-tree)"
      },
      {
        "command": "copilotPromptTracker.refreshView",
        "title": "Refresh Prompts",
        "category": "AI Prompt Tracker",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotPromptTracker.toggleAutoCorrelation",
        "title": "Toggle Auto-Correlation",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.showAutomationStatus",
        "title": "Show Automation Status",
        "category": "AI Prompt Tracker"
      },
      {
        "command": "copilotPromptTracker.showSessionInsights",
        "title": "Show Session Insights",
        "category": "AI Prompt Tracker"
      }
    ],
    "configuration": {
      "title": "Copilot Prompt Tracker",
      "properties": {
        "copilotPromptTracker.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository in format 'owner/repo' where AI assistant prompts will be saved"
        },
        "copilotPromptTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic AI assistant prompt tracking"
        },
        "copilotPromptTracker.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save prompts after each AI assistant interaction"
        },
        "copilotPromptTracker.saveLocation": {
          "type": "string",
          "enum": [
            "prompts",
            "docs",
            "ai-history"
          ],
          "default": "prompts",
          "description": "Directory in the repository where prompts will be saved"
        },
        "copilotPromptTracker.defaultPrivateRepo": {
          "type": "boolean",
          "default": true,
          "description": "Create private repositories by default (recommended for security)"
        },
        "copilotPromptTracker.autoCorrelation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically correlate sessions with Git commits when they occur"
        },
        "copilotPromptTracker.enhancedCopilotDetection": {
          "type": "boolean",
          "default": true,
          "description": "Use enhanced heuristics to automatically detect Copilot interactions"
        },
        "copilotPromptTracker.commitDetectionSensitivity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "default": "medium",
          "description": "Sensitivity level for automatic Copilot interaction detection"
        }
      }
    },
    "views": {
      "copilotPromptTracker": [
        {
          "id": "copilotPromptTracker.promptsView",
          "name": "Prompts",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotPromptTracker",
          "title": "Copilot Prompt Tracker",
          "icon": "resources/tracker-icon.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "copilotPromptTracker.configure",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.savePrompt",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.savePromptFromTemplate",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.viewHistory",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.toggle",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.signOut",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.showSession",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.recordInteraction",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.correlateWithCommit",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.toggleAutoCorrelation",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.showAutomationStatus",
          "when": "true"
        },
        {
          "command": "copilotPromptTracker.showSessionInsights",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "copilotPromptTracker.refreshView",
          "when": "view == copilotPromptTracker.promptsView",
          "group": "navigation"
        },
        {
          "command": "copilotPromptTracker.configure",
          "when": "view == copilotPromptTracker.promptsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "NODE_ENV=test VSCODE_TEST=true vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "simple-git": "^3.28.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wcolon/copilot-git-prompt-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/wcolon/copilot-git-prompt-tracker/issues"
  },
  "homepage": "https://github.com/wcolon/copilot-git-prompt-tracker#readme",
  "license": "MIT",
  "keywords": [
    "copilot",
    "git",
    "prompt",
    "tracking",
    "ai",
    "github",
    "monitoring"
  ]
}
